<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChallengeActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <RelativeLayout
                android:id="@+id/creation_date_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/creation_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/creation_date"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_date_range" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/creation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/creation_date_label"
                    android:layout_alignEnd="@id/creation_date_label"
                    android:layout_alignRight="@id/creation_date_label" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/starting_date_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/ending_date_layout"
                android:layout_toLeftOf="@id/ending_date_layout"
                android:layout_toEndOf="@id/creation_date_layout"
                android:layout_toRightOf="@id/creation_date_layout"
                android:gravity="center">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/starting_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/starting_date"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_date_range" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/starting_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/starting_date_label"
                    android:layout_alignEnd="@id/starting_date_label"
                    android:layout_alignRight="@id/starting_date_label" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ending_date_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ending_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ending_date"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_date_range" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ending_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ending_date_label"
                    android:layout_alignEnd="@id/ending_date_label"
                    android:layout_alignRight="@id/ending_date_label" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/address_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/creation_date_layout"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_location_on_black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address_label"
                    android:layout_marginStart="-36dp"
                    android:layout_marginLeft="-36dp"
                    android:layout_toEndOf="@id/address_label"
                    android:layout_toRightOf="@id/address_label" />

            </RelativeLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/challenge_owner_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_margin="16dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@id/challenge_owner_image"
                android:layout_toRightOf="@id/challenge_owner_image"
                android:text="Owner" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/owner_name"
                android:layout_toEndOf="@id/challenge_owner_image"
                android:layout_toRightOf="@id/challenge_owner_image">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_gold" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_gold" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/enroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:text="@string/enroll" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/challenge_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:layout_below="@id/header">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/challenge_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />

    </androidx.viewpager.widget.ViewPager>


</RelativeLayout>